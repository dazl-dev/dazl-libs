{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["*.ts", "build.tsx"],
  "exclude": ["node_modules", "dist"]
}
