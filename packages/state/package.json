{
  "name": "@dazl/state",
  "version": "1.0.0",
  "description": "Dazl state management utilities.",
  "type": "module",
  "exports": {
    "./base-store": "./dist/base-store.js",
    "./persistent-store": "./dist/persistent-store.js",
    "./react-router": "./dist/react-router.js",
    "./react-hook": "./dist/react-hook.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "scripts": {
    "test": "c8 mocha src/**/*.test.ts",
    "test:coverage": "c8 --reporter=html --reporter=text mocha src/**/*.test.ts"
  },
  "keywords": [
    "dazl",
    "react"
  ],
  "peerDependencies": {
    "pouchdb": "^9.0.0",
    "react": "^19.1.1",
    "react-router": "^7.9.1"
  },
  "peerDependenciesMeta": {
    "react-router": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "pouchdb": {
      "optional": true
    }
  },
  "author": "Dazl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dazl-dev/dazl-libs.git",
    "directory": "packages/state"
  },
  "publishConfig": {
    "access": "public"
  },
  "c8": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts",
      "src/test-store.ts"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "check-coverage": true,
    "lines": 80,
    "functions": 80,
    "branches": 80,
    "statements": 80
  },
  "devDependencies": {
    "@types/pouchdb": "^6.4.2",
    "pouchdb": "^9.0.0",
    "pouchdb-adapter-http": "^9.0.0",
    "pouchdb-adapter-idb": "^9.0.0"
  }
}
