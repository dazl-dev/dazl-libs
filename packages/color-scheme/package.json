{
  "name": "@dazl/color-scheme",
  "version": "1.0.1",
  "description": "Color scheme utilities and tools",
  "type": "module",
  "exports": {
    "./react": {
      "import": "./dist/react.js"
    },
    "./client": {
      "import": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "test": "playwright test --config=playwright.config.ts",
    "pretest": "npm run clean && npm run build"
  },
  "keywords": [
    "color",
    "scheme",
    "utilities"
  ],
  "author": "Dazl",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "!**/*.test.*",
    "!**/playwright.config.*",
    "!**/*.playwright.*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
